{
  "name": "setup-typescript-nodejs-eslint-prettier",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev -r dotenv/config --inspect --transpile-only --ignore-watch node_modules --respawn src/index.ts",
    "start": "npm run build && node -r dotenv/config ./dist/src/index.js",
    "lint": "eslint ./src ./test --ext .ts,.js",
    "lint:fix": "eslint ./src ./test --ext .ts,.js --fix",
    "test": "jest --coverage",
    "test:functional": "jest --watch --projects ./test --runInBand --detectOpenHandles",
    "test:unit": "jest --watch --runInBand --detectOpenHandles",
    "style:check": "prettier --check './src/**/*.{ts,js}' './test/**/*.{ts,js}'",
    "style:fix": "prettier --write './src/**/*.{ts,js}' './test/**/*.{ts,js}'"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.3",
    "@types/module-alias": "^2.0.1",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^17.0.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.1",
    "jest": "^27.4.5",
    "nock": "^13.2.1",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@types/axios": "^0.14.0",
    "axios": "^0.24.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.2",
    "module-alias": "^2.2.2",
    "mongoose": "^6.1.3"
  }
}
